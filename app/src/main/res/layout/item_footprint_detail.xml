<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:background="@android:color/white">

    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/riv_portrait"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        app:riv_corner_radius="100dp"
        app:riv_border_width="1dip"
        app:riv_border_color="#ffffff"
        app:riv_mutate_background="true"
        android:src="@drawable/temp1"/>

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/riv_portrait"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:singleLine="true"
        android:textColor="@color/text_theme"
        android:textSize="13dp"
        android:gravity="center_vertical"
        android:text="skdfjsljf"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/riv_portrait"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/text_gray"
        android:textSize="13dp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:text="a year ago"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_time"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/text_theme"
        android:textSize="15dp"
        android:lineSpacingExtra="5dp"
        android:gravity="center_vertical"
        android:text="skdfjsljf
        sdfsdf"/>

    <TextView
        android:id="@+id/tv_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/text_blue_light"
        android:textSize="13dp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:text="skdfjsljf"/>

    <LinearLayout
        android:id="@+id/ll_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_place"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/tv_comment_text"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/ll_images"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/text_gray"
        android:textSize="13dp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:text="@string/str_comment"/>

    <TextView
        android:id="@+id/tv_comment_num"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/ll_images"
        android:layout_toRightOf="@id/tv_comment_text"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/text_gray"
        android:textSize="13dp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:text="34"/>

    <TextView
        android:id="@+id/tv_praise_text"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/ll_images"
        android:layout_toRightOf="@id/tv_comment_num"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/text_gray"
        android:textSize="13dp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:text="@string/str_praise"/>

    <TextView
        android:id="@+id/tv_praise_num"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/ll_images"
        android:layout_toRightOf="@id/tv_praise_text"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/text_gray"
        android:textSize="13dp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:text="11"/>

</RelativeLayout>