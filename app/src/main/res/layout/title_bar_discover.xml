<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme">

    <RadioGroup
        android:id="@+id/rg_menu"
        android:layout_width="match_parent"
        android:layout_height="39.5dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:orientation="horizontal"   >

        <RadioButton
            android:id="@+id/rb_recommend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:checked="true"
            android:textSize="13dp"
            android:textColor="@drawable/tab_select_white_pink"
            android:text="推荐"
            android:background="@drawable/tab_select_bg_left_discovery"/>

        <RadioButton
            android:id="@+id/rb_new"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:checked="false"
            android:textSize="13dp"
            android:textColor="@drawable/tab_select_white_pink"
            android:text="最新"
            android:background="@drawable/tab_select_bg_right_discovery"/>
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rg_menu"
        android:background="@color/divider"/>

</RelativeLayout>